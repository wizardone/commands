	email = wizard.oneandonly@gmail.com
[core]
	editor = vim
	whitespace = fix,-indent-with-non-tab,trailing-space,cr-at-eol
	excludesfile = ~/.gitignore

[push]
	default = matching

[merge]
  ff = no
[color "branch"]
	current = yellow bold
	local = green bold
	remote = cyan bold
[color "diff"]
	meta = yellow bold
	frag = magenta bold
	old = red bold
	new = green bold
	whitespace = red reverse
[color "status"]
	added = green bold
	changed = yellow bold
	untracked = red bold

[diff]
  tool = vimdiff

[alias]
  co = checkout
  s = status
  d = diff
  l = log --pretty=format:\"%h %ad | %s%d [%an]\" --graph --date=short
  br = branch
